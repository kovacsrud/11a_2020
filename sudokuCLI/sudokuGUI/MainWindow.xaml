<Window x:Class="sudokuGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:sudokuGUI"
        mc:Ignorable="d"
        Title="Sudoku-ellenőrző" Height="210" Width="540">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Height="24" Margin="10,28,0,0" TextWrapping="Wrap" Text="Új feladvány mérete:" VerticalAlignment="Top" Width="131" FontSize="14"/>
        <Button x:Name="buttonCsokkent" Content="-" HorizontalAlignment="Left" Height="24" Margin="146,26,0,0" VerticalAlignment="Top" Width="25" FontWeight="Bold" FontSize="14"/>
        <Button x:Name="buttonNovel" Content="+" HorizontalAlignment="Left" Height="24" Margin="230,26,0,0" VerticalAlignment="Top" Width="25" FontWeight="Bold" FontSize="14"/>

    </Grid>
</Window>
